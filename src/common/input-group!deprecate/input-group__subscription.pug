//-
    options.placeholder - placeholder
    options.value - текст в input'е

mixin input-group__subscription(options)
    - const defaultOptions = {placeholder: '', value: ''};
    - let {placeholder, value} = Object.assign(defaultOptions, options);
    input.input-group__subscription(type="email", placeholder= placeholder, value= value)
    button.input-group__button.input-group__button-purple arrow_forward