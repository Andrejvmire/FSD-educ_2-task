mixin fieldset__dropdown(options)
    - let defaultOptions = {readonly: true, datePicker: false, range: 0, offset: 5, clearButton: 1};
    - let {value, mask, placeholder, readonly, id, datePicker, delimeter, range, min_date, date_format, offset, clearButton} = Object.assign(defaultOptions, options);
    .fieldset.fieldset__dropdown
        .fieldset__icon.fieldset__icon_dropdown expand_more
        if !datePicker
            input.input__text_masked.fieldset__label(type="text" value=value data-mask= mask data-placeholder= placeholder readonly= readonly)
            .fieldset__content.fieldset__content_with_border(id= id)
        else
            input.input__text_masked.datepicker-container(
                type="text"
                value=value
                data-placeholder= placeholder
                readonly= readonly
                data-range= range
                data-date-format= date_format
                data-offset= offset
                data-clear-button= clearButton
            )