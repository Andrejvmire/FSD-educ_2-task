include ../fieldset/fieldset

mixin room-filter-card(options)
    - let {title, href, iqdropdown_id} = options;
    form(action= href).card
        .grid.grid__list.grid__list_gap_20
            h1= title
            .grid.grid__2-columns.grid__2-columns_gap_25
                +group({
                    label: "Прибытие"
                })
                    +fieldset__dropdown({
                        placeholder: "ДД.ММ.ГГГГ"
                    })
                +group({
                    label: "Выезд"
                })
                    +fieldset__dropdown({
                        placeholder: "ДД.ММ.ГГГГ"
                    })
            +group({
                label: "Гости"
            })
                +fieldset__iqdropdown({
                    id: iqdropdown_id,
                    placeholder: "Сколько гостей",
                    selectionText: "гость",
                    textPlural: "гостей",
                    items: [
                        "Взрослые", "Дети", "Младенцы"
                    ]
                })
            +group({})
