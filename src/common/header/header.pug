include ../menu/__item/menu__items
include ../logo/logo

mixin header(options)
    -
        let defaultOptions = {
            auth: false,
            className: '',
            loginButtonName: "Login",
            registerButtonName: "Register",
            menuItems: [
                {name: "home", href: "#", current: true},
                {name: "about us", href: "#"},
                {
                    name: "services", href: "#", className: ".menu.menu__item.menu__dropdown", submenu: [
                        {name: "1", href: "#"},
                        {name: "2", href: "#"},
                        {name: "3", href: "#"}
                    ]
                },
                {name: "careers", href: "#"},
                {name: "news", href: "#"},
                {name: "documentation", href: "#"}
            ]
        };
    -
        let {auth, username, loginButtonName, registerButtonName, menuItems, className} = Object.assign(defaultOptions, options);
        className = className.split('.').join(' ');
    header.header(class= className)
        .header__wrapper.content
            +logo({
                className: ".logo__color.logo__title.header__logo"
            })
            .header__menu.grid.grid__auto-columns_gap_20
                ul.menu.menu__wrapper.menu__inline.grid.grid__auto-columns_gap_20
                    for item in menuItems
                        +menu__items(item)
                .header__auth
                    if (auth)
                        .header__user= username
                    else
                        button.button.button_type_bordered.button_fit= loginButtonName
                        button.button.button_type_filled.button_fit= registerButtonName